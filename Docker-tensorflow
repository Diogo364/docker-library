FROM tensorflow/tensorflow:latest-gpu-jupyter

RUN apt-get update && apt-get upgrade -y

RUN mkdir /workspace
WORKDIR /workspace

RUN apt-get install -y \
        build-essential \
        cmake \
        git \
        wget \
        unzip \
        yasm \
        pkg-config \
        libswscale-dev \
        libtbb2 \
        libtbb-dev \
        libjpeg-dev \
        libpng-dev \
        libtiff-dev \
        libavformat-dev \
        libhdf5-dev \
        libpq-dev

# Python dependencies
RUN pip --no-cache-dir install \
        numpy \
        hdf5storage \
        h5py \
        scipy \
        py3nvml \
        opencv-python \
        matplotlib \
        seaborn \
        pandas \
        tqdm

ENV SHELL=/bin/bash

CMD [ "/bin/bash" ]